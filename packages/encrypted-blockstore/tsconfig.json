{
  "include": ["src"],
  "compilerOptions": {
    "baseUrl": ".",
    "module": "esnext",
    "target": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "strict": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "emitDeclarationOnly": false,
    "declaration": true,
    "outDir": "dist",
    "rootDir": "src",
    "forceConsistentCasingInFileNames": true
  }
}
