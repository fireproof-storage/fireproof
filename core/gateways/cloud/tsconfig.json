{
  "compilerOptions": {
    "target": "es2021",
    "lib": ["dom"],
    "module": "nodenext",
    "rootDir": ".",
    "moduleResolution": "nodenext", 
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist", 
    "removeComments": true,
    "esModuleInterop": true, 
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
