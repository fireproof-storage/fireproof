{
  "name": "@fireproof/monorepo",
  "version": "0.0.0-smoke",
  "private": true,
  "description": "Live ledger for the web",
  "type": "module",
  "engines": {
    "node": ">=20.18.1"
  },
  "scripts": {
    "fppublish": "pnpm run '/publish:/'",
    "fppublish:fireproof-core": "tsx ./publish-package.ts ./dist/fireproof-core/package.json",
    "fppublish:use-fireproof": "tsx ./publish-package.ts ./dist/use-fireproof/package.json",
    "prebuild": "rm -rf dist/fireproof-core dist/use-fireproof",
    "build": "pnpm run '/build:/' && pnpm run '/pub:/'",
    "build:tsc": "rm -rf ./dist/tsc ; tsc",
    "build:tsup": "tsup",
    "build:docs": "if [ \"$FP_CI\" = 'fp_ci' ] ; then bash build-docs.sh; fi",
    "pub:fireproof-core": "mkdir -p ./dist/fireproof-core ; cp -pr tests ./dist/fireproof-core; cp -pr dist/tsc/src/* ./dist/fireproof-core;  tsx ./version-copy-package.ts ./dist/fireproof-core/package-fireproof-core.json",
    "pub:use-fireproof": "mkdir -p ./dist/use-fireproof ; cp -pr dist/tsc/src/use-fireproof/* ./dist/use-fireproof; tsx ./version-copy-package.ts ./dist/use-fireproof/package-use-fireproof.json",
    "presmoke": "if [ \"$FP_CI\" != 'fp_ci' ] ; then pnpm run build; fi; pnpm run presmoke:publish",
    "presmoke:publish": "bash -x smoke/publish-local-registry.sh",
    "smoke": "pnpm run '/^smoke:/'",
    "smoke-retry": "pnpm run '/^smoke:/'",
    "smoke:esm": "sh smoke/esm/it.sh",
    "smoke:node": "sh smoke/npm/it.sh",
    "smoke:react": "sh smoke/react/it.sh",
    "clean": "rm -rf node_modules dist",
    "env": "env",
    "dev": "pnpm run '/^dev:/'",
    "dev:3rd-party": "npx vite -c vite.config.ts cloud/3rd-party --port 3001",
    "dev:dashboard": "npx vite -c vite.config.ts cloud/dashboard --port 3002",
    "test": "vitest --run",
    "test:file": "vitest --config vitest.file.config.ts --run",
    "test:indexeddb": "vitest --config vitest.indexeddb.config.ts --run",
    "test:deno": "deno run --quiet --allow-net --allow-write --allow-run  --allow-sys --allow-ffi  --allow-read --allow-env  ./node_modules/vitest/vitest.mjs --run --project file",
    "format": "prettier .",
    "check": "pnpm format --write && pnpm lint && pnpm test && pnpm build",
    "lint": "eslint",
    "drizzle:libsql": "drizzle-kit push --config ./cloud/backend/node/drizzle.cloud.libsql.config.ts",
    "drizzle:d1-local": "drizzle-kit push --config ./cloud/backend/cf-d1/drizzle.cloud.d1-local.config.ts",
    "drizzle:d1-remote": "drizzle-kit push --config ./cloud/backend/cf-d1/drizzle.cloud.d1-remote.config.ts",
    "wrangler:cf-d1": "wrangler deploy -c cloud/backend/cf-d1/wrangler.toml --env dev"
  },
  "keywords": [
    "ledger",
    "database",
    "JSON",
    "immutable",
    "IPLD",
    "CID",
    "UCAN"
  ],
  "contributors": [
    "J Chris Anderson",
    "Alan Shaw",
    "Travis Vachon",
    "Mikeal Rogers",
    "Meno Abels"
  ],
  "license": "Apache-2.0 OR MIT",
  "devDependencies": {
    "@cloudflare/vite-plugin": "^1.5.0",
    "@cloudflare/workers-types": "^4.20250610.0",
    "@eslint/js": "^9.27.0",
    "@hono/node-server": "^1.14.4",
    "@hono/node-ws": "^1.1.7",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^24.0.0",
    "@types/randombytes": "^2.0.3",
    "@types/react": "^19.1.4",
    "@types/react-dom": "19.1.5",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/typescript-estree": "^8.34.0",
    "@vitejs/plugin-react": "^4.4.1",
    "@vitest/browser": "^3.2.1",
    "@vitest/coverage-v8": "^3.2.1",
    "@vitest/ui": "^3.2.1",
    "autoprefixer": "^10.4.21",
    "aws4fetch": "^1.0.20",
    "cmd-ts": "^0.13.0",
    "deno": "^2.3.5",
    "drizzle-kit": "0.30.6",
    "esbuild": "^0.25.4",
    "esbuild-plugin-replace": "^1.4.0",
    "eslint": "^9.27.0",
    "eslint-import-resolver-typescript": "^4.4.3",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.2.0",
    "hono": "^4.7.10",
    "playwright": "^1.53.0",
    "playwright-chromium": "^1.53.0",
    "prettier": "^3.5.3",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "rollup-plugin-visualizer": "^6.0.3",
    "semver": "^7.7.2",
    "tsup": "^8.5.0",
    "tsx": "^4.19.4",
    "typedoc": "^0.28.4",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.32.1",
    "uuidv7": "^1.0.2",
    "vite": "^6.3.5",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.1",
    "wrangler": "^4.19.1",
    "zx": "^8.5.5"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fireproof-storage/fireproof.git"
  },
  "bugs": {
    "url": "https://github.com/fireproof-storage/fireproof/issues"
  },
  "homepage": "https://github.com/fireproof-storage/fireproof#readme",
  "dependencies": {
    "@adviser/cement": "^0.4.15",
    "@clerk/backend": "^2.0.0",
    "@clerk/clerk-react": "^5.31.9",
    "@fireproof/vendor": "^3.0.0",
    "@ipld/car": "^5.4.1",
    "@ipld/dag-cbor": "^9.2.4",
    "@ipld/dag-json": "^10.2.4",
    "@libsql/client": "^0.15.6",
    "@tailwindcss/container-queries": "^0.1.1",
    "@tanstack/react-query": "^5.80.6",
    "@web3-storage/pail": "^0.6.2",
    "cborg": "^4.2.10",
    "charwise": "^3.0.1",
    "drizzle-orm": "^0.44.2",
    "esbuild-plugin-replace": "^1.4.0",
    "highlight.js": "^11.11.1",
    "idb": "^8.0.3",
    "jose": "^6.0.11",
    "multiformats": "^13.3.4",
    "p-map": "^7.0.3",
    "p-retry": "^6.2.1",
    "prolly-trees": "^1.0.4",
    "randombytes": "^2.1.0",
    "react": "^19.1.0",
    "react-hook-form": "^7.57.0",
    "react-router-dom": "^7.6.2",
    "react-simple-code-editor": "^0.14.1",
    "tailwindcss": "^3.4.17",
    "ws": "^8.18.2"
  },
  "bundle-phobia": {
    "max-size": "390kB",
    "max-gzip-size": "110kB",
    "max-overall-size": "1MB"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "core-js",
      "deno",
      "edgedriver",
      "esbuild",
      "msw",
      "playwright-chromium",
      "sharp",
      "workerd"
    ],
    "patchedDependencies": {
      "drizzle-kit": "patches/drizzle-kit.patch"
    }
  }
}
