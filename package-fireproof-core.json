{
  "name": "@fireproof/core",
  "version": "must-set",
  "description": "Live ledger for the web.",
  "type": "module",
  "module": "./index.js",
  "main": "./index.cjs",
  "types": "./index.d.ts",
  "exports": {
    ".": {
      "import": "./index.js",
      "require": "./index.cjs",
      "types": "./index.d.ts"
    },
    "./node": {
      "import": "./node/node-filesystem.js",
      "require": "./node/node-filesystem.cjs",
      "types": "./node/node-filesystem.d.ts"
    },
    "./mem": {
      "import": "./node/mem-filesystem.js",
      "require": "./node/mem-filesystem.cjs",
      "types": "./node/mem-filesystem.d.ts"
    },
    "./web": {
      "import": "./web/gateway-impl.js",
      "require": "./web/gateway-impl.cjs",
      "types": "./web/gateway-impl.d.ts"
    },
    "./react": {
      "import": "./react/index.js",
      "require": "./react/index.cjs",
      "types": "./react/index.d.ts"
    }
  },
  "scripts": {},
  "keywords": ["ledger", "JSON", "document", "IPLD", "CID", "IPFS"],
  "contributors": ["J Chris Anderson", "Alan Shaw", "Travis Vachon", "Mikeal Rogers", "Meno Abels"],
